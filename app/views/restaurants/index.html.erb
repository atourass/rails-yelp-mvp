<div class="container">
  <div class="row ">
    <div class="col-xs-12">
      <h1>Our Restaurants</h1>

      <ul class="list-group">
        <% @restaurants.each do |restaurant| %>
          <li class="list-group-item">
            <%= restaurant.name %>
            <%= link_to "Details", restaurant_path(restaurant.id) %>
          </li>
        <% end %>
      </ul>

      <%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
